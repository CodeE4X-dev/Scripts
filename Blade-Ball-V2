-- Buat ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "UpdateNotification"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Buat TextLabel
local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(0.5, 0, 0.1, 0) -- Lebar 50%, tinggi 10% dari layar
textLabel.Position = UDim2.new(0.25, 0, 0.45, 0) -- Posisikan di tengah layar
textLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Warna latar hitam
textLabel.BackgroundTransparency = 0.5 -- Transparansi latar
textLabel.Text = "Script will update soon" -- Teks yang ditampilkan
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- Warna teks putih
textLabel.Font = Enum.Font.SourceSansBold -- Gaya font
textLabel.TextScaled = true -- Skala teks agar sesuai dengan ukuran label
